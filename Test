import discord

import asyncio

import pyautogui

import os

from datetime import datetime

TOKEN = "MTM2ODU1MjQ0MjY2MDM5MzAyMg.G8lcrF.p1G_tNR4-1bZEB9jS5eAEqdQdZW4k9gEq246Vg"

CHANNEL_ID = 1368549684888604766  # Replace with your actual channel ID

intents = discord.Intents.default()

intents.messages = True

intents.message_content = True  # Required to read messages

client = discord.Client(intents=intents)

@client.event

async def on_ready():

print(f"âœ… Bot is online as {client.user}")

channel = client.get_channel(CHANNEL_ID)

if channel:

    await channel.send("âœ… Bot started and is now online.")

@client.event

async def on_message(message):

if message.author == client.user or message.channel.id != CHANNEL_ID:

    return



if message.content.lower() == "!screenshot":

    filename = f"screenshot_{datetime.now().strftime('%Y%m%d_%H%M%S')}.png"

    pyautogui.screenshot(filename)

    await message.channel.send("ðŸ“¸ Screenshot taken!", file=discord.File(filename))

    os.remove(filename)



elif message.content.lower() == "!shutdown":

    await message.channel.send("ðŸ›‘ Bot shutting down.")

    await client.close()

client.run(TOKEN)
