import mediapipe as mp
import cv2
import numpy as np
from pynput.keyboard import Controller, Key

# var
keyboard = Controller()
w_pressed = False
s_pressed = False



# MediaPipe
mp_hands = mp.solutions.hands
mp_draw = mp.solutions.drawing_utils

hands = mp_hands.Hands(
    static_image_mode=False, # False = Camera mode , True = image mode
    max_num_hands=1,
    min_detection_confidence=0.6,
    min_tracking_confidence=0.6
)

# Open camera
Camera = cv2.VideoCapture(0)

# debug size
Camera.set(cv2.CAP_PROP_FRAME_WIDTH, 1280)
Camera.set(cv2.CAP_PROP_FRAME_HEIGHT, 720)

if not Camera.isOpened():
    print("No camera?")
    exit()

while True:
    success, img = Camera.read()
    if not success:
        break

    img = cv2.flip(img, 1)
    imagergb = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)
    result = hands.process(imagergb)

    if result.multi_hand_landmarks:
        hand = result.multi_hand_landmarks[0]
        index_tip = hand.landmark[8]
        index_pip = hand.landmark[6]

        if index_tip.y < index_pip.y:
            cv2.putText(img, "W", (30, 60),
                        cv2.FONT_HERSHEY_SIMPLEX, 1.5, (0,255,0), 3)
        if not w_pressed:
            keyboard.press('w')
            w_pressed = True
            print("W HOLD")
        if index_tip.y > index_pip.y:
            cv2.putText(img, "S", (30, 60),
                        cv2.FONT_HERSHEY_SIMPLEX, 1.5, (0,255,0), 3)
        if not s_pressed:
            keyboard.press('s')
            s_pressed = True
            print("S HOLD")
        else:
            s_pressed = False
            w_pressed = False
            print("Nothing")   
        for hand_landmarks in result.multi_hand_landmarks:
            h, w, _ = img.shape

            for idx, lm in enumerate(hand_landmarks.landmark):
                cx, cy = int(lm.x * w), int(lm.y * h)

                # Draw dot
                cv2.circle(img, (cx, cy), 6, (255, 255, 0), -1)

                # Draw landmark index number
                cv2.putText(
                    img,
                    str(idx),
                    (cx + 5, cy - 5),
                    cv2.FONT_HERSHEY_SIMPLEX, # font
                    0.5, # text size
                    (0, 0, 255), # text color
                    1 # thickness
                )

    # show camera
    cv2.imshow("Camera view", img)

    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

hands.close()
Camera.release()
cv2.destroyAllWindows()
